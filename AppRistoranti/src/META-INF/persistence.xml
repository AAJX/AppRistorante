<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="AppRistoranti" transaction-type="RESOURCE_LOCAL">
		<class>model.nuovo.Citta</class>
		<class>model.nuovo.Prenotazione</class>
		<class>model.nuovo.Regione</class>
		<class>model.nuovo.Ristorante</class>
		<class>model.nuovo.Utente</class>
		<properties>
			<property name="javax.persistence.schema-generation.database.action" value="create"/>
			<property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/appdb"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
		</properties>
	</persistence-unit>
</persistence>
