<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.android.itfs.myapplication.ExploreNotLogged">


    <TextView
        android:id="@+id/nomeRist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"

        android:layout_below="@+id/descristuno"
        android:background="@color/black"
        android:text="RISTORANTE DUE"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nomeRist1" />

    <LinearLayout
        android:id="@+id/SliderDots"
        android:layout_below="@+id/viewPager"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/nomeRist1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/black"

        android:text="RISTORANTE UNO"
        android:textColor="@color/white"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/descristuno"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded"
        android:text="@string/descrRist1"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/prezzoristuno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/descristuno"
        android:layout_alignBottom="@+id/descristuno"
        android:layout_toEndOf="@+id/descristuno"
        android:background="@drawable/rounded"
        android:text="prezzo"
        android:textAlignment="viewEnd"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/orarioristuno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/descristuno"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/descristuno"
        android:background="@drawable/rounded"
        android:text="prezzo"
        android:textAlignment="viewEnd"
        android:textSize="10dp" />


</RelativeLayout>