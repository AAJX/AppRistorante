<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="allyoucanapp" transaction-type="RESOURCE_LOCAL">
		<class>allyoucanapp.Bevande</class>
		<class>allyoucanapp.Feedback</class>
		<class>allyoucanapp.Menu</class>
		<class>allyoucanapp.Prenotazione</class>
		<class>allyoucanapp.Ristorante</class>
		<class>allyoucanapp.Utente</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/allyoucanappdb"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.schema-generation.database.action" value="create"/>
		</properties>
	</persistence-unit>
</persistence>
